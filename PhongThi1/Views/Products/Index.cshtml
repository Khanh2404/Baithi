@model IEnumerable<Product>

    <table>
        <thead>
            <th>Id</th>
            <th>Name</th>
            <th>Mota</th>
            <th>Gia</th>
            <th>SoLong</th>
            <th>HangDong</th>
        </thead>
        <tbody>
        @foreach (Product p in Model)
        {
            <tr>
                <td>@p.Id</td>
                <td>@p.Name</td>
                <td>@p.Description</td>
                <td>@p.Price</td>
                <td>@p.Quantity</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@p.Id" >Edit</a>
                    <a asp-action="Detail" asp-route-id="@p.Id" >Detail</a>
                    <a asp-action="Delete" asp-route-id="@p.Id" >Delete</a>
                </td>
            </tr>
        }
        </tbody>
    </table>